import requests
import json

def get_vehicle_info(reg_number):
    """
    This function takes a vehicle registration number as input and returns the vehicle information.
    """
    # Replace YOUR_API_KEY with your actual API key
    api_key = "{
	"as": {
		"asn": 4758,
		"domain": "nic.in",
		"name": "NICNET-VSNL-BOARDER-AP",
		"route": "164.100.69.0/24",
		"type": "Non-Profit"
	},
	"domainName": "vahan.parivahan.gov.in",
	"categories": [
		{
			"confidence": 0.85,
			"id": 61,
			"name": "Government"
		}
	],
	"websiteResponded": true
}"

    # Make a GET request to the Vahan API
    response = requests.get(f"https://vahan.parivahan.gov.in/vahanservice/v1/registrationdetailsbyregno?reg_no={reg_number}&api_key={api_key}")

    # Check if the request was successful
    if response.status_code == 200:
        # Parse the JSON response
        data = json.loads(response.text)

        # Extract the vehicle information
        vehicle_info = data['vehicle_details'][0]

        # Print the vehicle information
        print(f"Registration Number: {vehicle_info['reg_no']}")
        print(f"Chassis Number: {vehicle_info['chasi_no']}")
        print(f"Engine Number: {vehicle_info['engine_no']}")
        print(f"Vehicle Class: {vehicle_info['vehicle_class']}")
        print(f"Fuel Type: {vehicle_info['fuel']}")
        print(f"Manufacturing Year: {vehicle_info['manufacturing_year']}")
        print(f"Color: {vehicle_info['color']}")
        print(f"Owner Name: {vehicle_info['owner_name']}")
        print(f"Vehicle Insurance Valid Upto: {vehicle_info['insurance_valid_upto']}")
        print(f"Pollution Certificate Valid Upto: {vehicle_info['pc_valid_upto']}")
    else:
        print("Failed to get vehicle information.")

# Test the function
get_vehicle_info("DL12AB1234")
